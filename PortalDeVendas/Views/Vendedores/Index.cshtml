@model IEnumerable<PortalDeVendas.Models.Vendedor>
@{
    ViewData["Title"] = "Vendedores";

}


<h2>Vendedores</h2>
<p>
    <a asp-action="Create" class="btn btn-default">Adicionar</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <td>
                @Html.DisplayNameFor(model => model.Nome)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Email)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Data)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.PisoSalarial)
            </td>
            <td></td>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PisoSalarial)
                </td>
                <td>
                    <a asp-action="Editar" asp-rout-id="@item.Id">Editar</a> |
                    <a asp-action="Detalhes" asp-rout-id="@item.Id">Detalhes</a> |
                    <a asp-action="Excluir" asp-rout-id="@item.Id">Excluir</a>

                </td>
            </tr>
        }
    </tbody>
</table>